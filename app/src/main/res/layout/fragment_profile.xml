<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="45dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nama"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="105dp" />

    <TextView
        android:id="@+id/tvNIM"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="NIM"
        app:layout_constraintTop_toBottomOf="@+id/tvNama"
        tools:layout_editor_absoluteX="105dp" />

    <TextView
        android:id="@+id/tvProdi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Program Studi"
        app:layout_constraintTop_toBottomOf="@+id/tvNIM"
        tools:layout_editor_absoluteX="105dp" />

    <Button
        android:id="@+id/btnMenunggu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Menunggu"
        app:layout_constraintTop_toBottomOf="@+id/tvProdi"
        tools:layout_editor_absoluteX="105dp" />

    <Button
        android:id="@+id/btnSelesai"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Selesai"
        app:layout_constraintTop_toBottomOf="@+id/btnDiproses"
        tools:layout_editor_absoluteX="105dp" />

    <Button
        android:id="@+id/btnDiproses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Diproses"
        app:layout_constraintTop_toBottomOf="@+id/btnMenunggu"
        tools:layout_editor_absoluteX="105dp" />
</LinearLayout>